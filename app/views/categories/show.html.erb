<h1 align="center">Category: <%= @category.name %></h1><%#Copied and edited from articles/index.html.erb %>

<div align="center">
  <% if logged_in? and current_user.admin? %>
    <div class="row">
      <span class="badge"><%= link_to "Edit Category Name", edit_category_path(@category) %></span><%#Creates an 'Edit Category Name' badge under the category listing title.%>
    </div>
  <% end %>  
  <%= will_paginate @category_articles %>
</div>
<%= render 'articles/article', obj: @category_articles %>
<div align="center">
  <%= will_paginate @category_articles %>
</div>