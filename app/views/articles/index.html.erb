<h1>Listing All Articles</h1>
<p>
<%= link_to "Create New Article", new_article_path %> | <%= link_to 'Home Page', root_path %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td><%#(article) gives the individual article id.%>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article), method: :delete %></td>
    </tr>
  <% end %>
</table>