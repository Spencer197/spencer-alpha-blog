<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-xs-12"><%#Creates a row of 12 columns%>
    <%= form_for @article, :html => { class: "form-horizontal", role: "form" } do |f| %><%#The GitHub repo has () from @article to }, but I got a syntax error so I took them out & now it works.%>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of Article"  %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.submit class: "btn btn-primary btn-lg"%>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Return to Articles Listing", articles_path %> ]
    </div>
  </div>
</div>